<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/apk/res-auto"
    android:id="@+id/nav_graph"
    app:startDestination="@id/SearchFragment">

    <fragment
        android:id="@+id/SearchFragment"
        android:name="jp.co.yumemi.android.code_check.ui.SearchFragment"
        android:label="@string/app_name"
        tools:layout="@layout/fragment_search">
        <action
            android:id="@+id/action_repositoriesFragment_to_repositoryFragment"
            app:destination="@id/DetailFragment" />
    </fragment>

    <fragment
        android:id="@+id/DetailFragment"
        android:name="jp.co.yumemi.android.code_check.ui.DetailFragment"
        android:label="@string/app_name"
        tools:layout="@layout/fragment_detail">
        <argument
            android:name="repository"
            app:argType="jp.co.yumemi.android.code_check.model.Repository" />
    </fragment>

</navigation>
